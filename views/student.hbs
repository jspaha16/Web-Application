<div class="row">
  <main class="col-md-12">
    <br />
    {{#each student}}
      <h2>{{this.firstName}}
        {{student.lastName}}
        - Student:
        {{this.studentNum}}</h2>
      <hr />
      <form method="post" action="/student/update">
        <input type="hidden" name="studentNum" value="{{this.studentNum}}" />
        <fieldset>
          <legend>Personal Information</legend>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label>First Name:</label>
                <input
                  class="form-control"
                  name="firstName"
                  type="text"
                  value="{{this.firstName}}"
                />
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label>Last Name:</label>
                <input
                  class="form-control"
                  name="lastName"
                  type="text"
                  value="{{this.lastName}}"
                />
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <label>Email:</label>
                <input
                  class="form-control"
                  name="email"
                  type="email"
                  value="{{this.email}}"
                />
              </div>
            </div>

          </div>
          <div class="row">
            <div class="col-md-4">
              <div class="form-group">
                <label>Address (Street):</label>
                <input
                  class="form-control"
                  name="addressStreet"
                  type="text"
                  value="{{this.addressStreet}}"
                />
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <label>Address (City):</label>
                <input
                  class="form-control"
                  name="addressCity"
                  type="text"
                  value="{{this.addressCity}}"
                />
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <label>Address (Province):</label>
                <input
                  class="form-control"
                  name="addressProvince"
                  type="text"
                  value="{{this.addressProvince}}"
                />
              </div>
            </div>
          </div>

        </fieldset>

        <fieldset>
             <legend>Academic Information</legend>
          <div class="row">
            <div class="col-md-4">
              <label>College Employment:</label><br />
               
              <div class="form-check">
              
                <input
                
                  class="form-check-input"
                  name="TA"
                  type="checkbox"
                  id="TA"
                  {{#if this.TA}}checked{{/if}} 
                  
                />
               
               
                <label class="form-check-label" for="TA" >
                  Teaching Assistant
                </label>
               
              </div>
               
              <br />
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <label>Enrollment Status:</label><br />
                  
                <label class="checkbox-inline">
                 
                  <input type="radio" name="status" value="Full Time" {{#equal this.status "Full Time"}}checked{{/equal}} />
                  
                  Full Time
                </label>
                <label class="checkbox-inline">
                 
                  <input type="radio" name="status" value="Part Time" {{#equal this.status "Part Time"}}checked{{/equal}} />
                  
                  Part Time
                  
                </label>
                
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <label for="course">Enrolled in Course:</label>
                
                <select class="form-control" name="course" id="course">
                  <option value="1" {{#equal this.course "1"}}selected{{/equal}}>Relational Database Design and
                    Implementation</option>
                  <option value="2" {{#equal this.course "2"}}selected{{/equal}}>Java Programming</option>
                  <option value="3" {{#equal this.course "3"}}selected{{/equal}}>Introduction to Cloud Computing</option>
                  <option value="4" {{#equal this.course "4"}}selected{{/equal}}>Database Administration and Management</option>
                  <option value="5" {{#equal this.course "5"}}selected{{/equal}}>Web Programming</option>
                  <option value="6" {{#equal this.course "6"}}selected{{/equal}}>Applied Capstone Project</option>
                  <option value="7" {{#equal this.course "7"}}selected{{/equal}}>Database Connectivity Using Java</option>
                  <option value="8" {{#equal this.course "8"}}selected{{/equal}}>Accessing Big Data</option>
                  <option value="9" {{#equal this.course "9"}}selected{{/equal}}>Datawarehousing</option>
                  <option value="10" {{#equal this.course "10"}}selected{{/equal}}>Security in Databases and Web Applications</option>
                  <option value="11" {{#equal this.course "11"}}selected{{/equal}}>Work Term Preparation (Work-Integrated
                    Learning option only)</option>
                </select>
              
              </div>
            </div>
          </div>
        </fieldset>
        <hr />
        <input
          type="submit"
          class="btn btn-primary float-right"
          value="Update Student"
        /><br /><br /><br />
      </form>
    {{/each}}
  </main>
</div>